@model AboutAddVM
@{
    ViewData["Title"] = "AddAbout";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="About" asp-action="GetAllAboutList">About Us</a></li>
        <li class="breadcrumb-item active">Add</li>
    </ol>
</nav>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Add New About Us</h5>

        <!-- Add About Us Form -->

        @* enctype="multipart/form-data" → allows the form to send files (images, docs…) to the server. *@
        <form asp-area="Admin" asp-controller="About" asp-action="AddAbout" method="post" class="row g-3" enctype="multipart/form-data"> 
            <input type="hidden" asp-for="FileName" value="test" />
            <input type="hidden" asp-for="FileType" value="test" />
            <div class="col-md-12"> 
                <div class="form-floating">
                    <input asp-for="Header" type="text" class="form-control" placeholder="Header">
                    <label asp-for="Header">Header</label>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-floating">
                    <textarea asp-for="Description" class="form-control h-50" placeholder="Description" rows="3"></textarea>
                    <label asp-for="Description">Description</label>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="Clients" type="number" class="form-control" placeholder="Clients">
                    <label  asp-for="Clients">Clients</label>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="HourOfSupport" type="number" class="form-control" placeholder="Hours Of Support">
                    <label asp-for="HourOfSupport">Hour Of Support</label>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="Projects" type="number" class="form-control" placeholder="Projects">
                    <label asp-for="Projects">Projects</label>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="HardWorkers" type="number" class="form-control" placeholder="Hard Workers">
                    <label asp-for="HardWorkers">Hard Workers</label>
                </div>
            </div>


            <partial name="AddSocialMediaParialView/_SocialMediaView" />


            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Photo" accept="image/*" type="file" class="form-control" placeholder="Photo">
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-between">

                <a asp-area="Admin" asp-controller="About" asp-action="GetAllAboutList" class="btn btn-outline-danger">Cancel</a>

                <div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
            </div>
        </form><!-- End Add About Us Form -->

    </div>
</div>

