@model ContactAddVM

@{
    ViewData["Title"] = "AddContact";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Contact" asp-action="GetAllContactList">Contact Us</a></li>
        <li class="breadcrumb-item active">Add</li>
    </ol>
</nav>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Add New Contact Us</h5>

        <!-- Add About Us Form -->
        @* enctype="multipart/form-data" → allows the form to send files (images, docs…) to the server. *@
        <form asp-area="Admin" asp-controller="Contact" asp-action="AddContact" method="post" class="row g-3">
            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Location" type="text" class="form-control" placeholder="Location">
                    <label asp-for="Location">Location</label>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                    <label asp-for="Email">Email</label>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="Call" type="text" class="form-control" placeholder="Call">
                    <label asp-for="Call">Call</label>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="Map" type="text" class="form-control" placeholder="Map">
                    <label asp-for="Map">Map</label>
                </div>
            </div>


            <div class="d-flex justify-content-between">

                <a asp-area="Admin" asp-controller="Contact" asp-action="GetAllContactList" class="btn btn-outline-danger">Cancel</a>

                <div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
            </div>
        </form><!-- End Add About Us Form -->

    </div>
</div>


