@model List<CategoryListVM>

@{
    ViewData["Title"] = "GetAllCategoryList";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<h5 class="card-title">Categories</h5>

<nav>
	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
		<li class="breadcrumb-item active">Categories</li>
	</ol>
</nav>



<div class="card">
	<div class="card-body">
		<h5 class="card-title">Category Table</h5>

		<!-- Table with hoverable rows -->
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">Name</th>
					<th scope="col">Created Date</th>
					<th scope="col">Updated Date</th>
					<th scope="col">Edit</th>
					<th scope="col">Delete</th>
				</tr>
			</thead>
			@foreach (var item in Model)
			{
				<tbody>
					<tr>
						<td>@item.Name</td>
						<td>@item.CreatedDate</td>
						<td>@item.UpdatedDate</td>
						<td><a asp-area="Admin" asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.Id" data-id="@item.Id" class="btn btn-primary btn-sm">Edit</a></td>
						<td><a asp-area="Admin" asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.Id" data-id="@item.Id" class="btn btn-danger btn-sm">Delete</a></td>
					</tr>
				</tbody>
			}

		</table>
		<!-- End Table with hoverable rows -->
		<a asp-area="Admin" asp-controller="Category" asp-action="AddCategory" class="btn btn-success btn-sm">Add Category</a>

	</div>
</div>



