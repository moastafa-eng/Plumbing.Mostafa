@model CategoryAddVM

@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Category" asp-action="GetAllCategoryList">Categories</a></li>
        <li class="breadcrumb-item active">Add</li>
    </ol>
</nav>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Add New Category</h5>

        <!-- Add About Us Form -->
        @* enctype="multipart/form-data" → allows the form to send files (images, docs…) to the server. *@
        <form asp-area="Admin" asp-controller="Category" asp-action="AddCategory" method="post" class="row g-3" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                    <label asp-for="Name">Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>


            <div class="d-flex justify-content-between">

                <a asp-area="Admin" asp-controller="Category" asp-action="GetAllCategoryList" class="btn btn-outline-danger">Cancel</a>

                <div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
            </div>
        </form><!-- End Add About Us Form -->

    </div>
</div>



