@model PortfolioUpdateVM

@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Portfolio" asp-action="GetAllPortfolioList">Portfolio</a></li>
        <li class="breadcrumb-item active">Update</li>
    </ol>
</nav>

<div class="card">
        <h5 class="card-title">Portfolio Image</h5>
    <img src="~/Images/WhatsApp Image 2025-10-29 at 18.37.16_c7fa4147.jpg" class="card-img-bottom" alt="..." style="width: 20%; height: auto;">
    </div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Update Portfolio</h5>

        <!-- Add About Us Form -->
        @* enctype="multipart/form-data" → allows the form to send files (images, docs…) to the server. *@
        <form asp-area="Admin" asp-controller="Portfolio" asp-action="UpdatePortfolio" method="post" class="row g-3" enctype="multipart/form-data">
            <input type="hidden" asp-for="FileName" value="test" />
            <input type="hidden" asp-for="FileType" value="test" />
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="RowVersion" />
            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Title" type="text" class="form-control" placeholder="Header">
                    <label asp-for="Title">Header</label>
                </div>
            </div>


            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Category.Name" type="text" class="form-control" placeholder="Category">
                    <label asp-for="Category.Name">Category</label>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Photo" accept="image/*" type="file" class="form-control" placeholder="Photo">
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-between">

                <a asp-area="Admin" asp-controller="Portfolio" asp-action="GetAllPortfolioList" class="btn btn-outline-danger">Cancel</a>

                <div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
            </div>
        </form><!-- End Add About Us Form. -->

    </div>
</div>


