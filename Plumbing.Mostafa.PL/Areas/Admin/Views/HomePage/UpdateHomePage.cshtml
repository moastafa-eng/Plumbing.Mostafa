@model HomePageUpdateVM

@{
    ViewData["Title"] = "UpdateHomePage";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="HomePage" asp-action="GetAllHomePageList">Contact Us</a></li>
        <li class="breadcrumb-item active">Update</li>
    </ol>
</nav>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Update Home Page</h5>

        <!-- Add About Us Form -->
        @* enctype="multipart/form-data" → allows the form to send files (images, docs…) to the server. *@
        <form asp-area="Admin" asp-controller="HomePage" asp-action="UpdateHomePage" method="post" class="row g-3">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="RowVersion" />
            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Header" type="text" class="form-control" placeholder="Header">
                    <label asp-for="Header">Header</label>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-floating">
                    <textarea asp-for="Description" class="form-control h-50" placeholder="Description" rows="3"></textarea>
                    <label asp-for="Description">Description</label>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="VideoLink" type="text" class="form-control" placeholder="Video Link">
                    <label asp-for="VideoLink">Video Link</label>
                </div>
            </div>


            <div class="d-flex justify-content-between">

                <a asp-area="Admin" asp-controller="HomePage" asp-action="GetAllHomePageList" class="btn btn-danger">Cancel</a>

                <div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
            </div>
        </form><!-- End Add About Us Form -->

    </div>
</div>




