@model ServiceUpdateVM

@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Service" asp-action="GetAllServiceList">Services</a></li>
        <li class="breadcrumb-item active">update</li>
    </ol>
</nav>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Update Service</h5>

        <!-- Add About Us Form -->
        @* enctype="multipart/form-data" → allows the form to send files (images, docs…) to the server. *@
        <form asp-area="Admin" asp-controller="Service" asp-action="UpdateService" method="post" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="RowVersion" />
            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                    <label asp-for="Name">Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-floating">
                    <textarea asp-for="Description" class="form-control h-50" placeholder="Description" rows="3"></textarea>
                    <label asp-for="Description">Description</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-5">
                <div class="form-floating">
                    <input asp-for="Icon" type="text" class="form-control" placeholder="Icon">
                    <label asp-for="Icon">Icon</label>
                    <span asp-validation-for="Icon" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-between">

                <a asp-area="Admin" asp-controller="Service" asp-action="GetAllServiceList" class="btn btn-outline-danger">Cancel</a>

                <div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
            </div>
        </form><!-- End Add About Us Form -->

    </div>
</div>




