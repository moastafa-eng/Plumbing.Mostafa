@model TestimonialAddVM

@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Testimonial" asp-action="GetAllTestimonialList">Testimonials</a></li>
        <li class="breadcrumb-item active">Add</li>
    </ol>
</nav>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Add New Testimonial</h5>

        <!-- Add About Us Form -->
        @* enctype="multipart/form-data" → allows the form to send files (images, docs…) to the server. *@
        <form asp-area="Admin" asp-controller="Testimonial" asp-action="AddTestimonial" method="post" class="row g-3" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FileName" value="test" />
            <input type="hidden" asp-for="FileType" value="test" />
            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="FullName" type="text" class="form-control" placeholder="Name">
                    <label asp-for="FullName">Name</label>
                    <span asp-validation-for="FileName" calss="text-danger"></span>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Title" type="text" class="form-control" placeholder="Title">
                    <label asp-for="Title">Title</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-floating">
                    <textarea asp-for="Comment" class="form-control h-50" placeholder="Comment" rows="3"></textarea>
                    <label asp-for="Comment">Comment</label>
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>
            </div>


                <div class="col-md-12">
                    <div class="form-floating">
                        <input asp-for="Photo" accept="image/*" type="file" class="form-control" placeholder="Photo">
                    <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between">

                    <a asp-area="Admin" asp-controller="Testimonial" asp-action="GetAllTestimonialList" class="btn btn-outline-danger">Cancel</a>

                    <div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <button type="reset" class="btn btn-secondary">Reset</button>
                    </div>
                </div>
        </form><!-- End Add About Us Form -->

    </div>
</div>

