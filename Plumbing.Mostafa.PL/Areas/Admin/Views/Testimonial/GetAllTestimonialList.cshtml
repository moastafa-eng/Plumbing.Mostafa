@model List<TestimonialListVM>

@{
    ViewData["Title"] = "GetAllTestimonialList";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h5 class="card-title">Testimonials</h5>

<nav>
	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
		<li class="breadcrumb-item active">Testimonials</li>
	</ol>
</nav>



<div class="card">
	<div class="card-body">
		<h5 class="card-title">Testimonial Table</h5>

		<!-- Table with hoverable rows -->
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">Name</th>
					<th scope="col">Title</th>
					<th scope="col">Created Date</th>
					<th scope="col">Updated Date</th>
					<th scope="col">Edit</th>
					<th scope="col">Delete</th>
				</tr>
			</thead>
			@foreach (var item in Model)
			{
				<tbody>
					<tr>
						<td>@item.FullName</td>
						<td>@item.Title</td>
						<td>@item.CreatedDate</td>
						<td>@item.UpdatedDate</td>
						<td><a asp-area="Admin" asp-controller="Testimonial" asp-action="UpdateTestimonial" asp-route-id="@item.Id" data-id="@item.Id" class="btn btn-outline-primary btn-sm">Edit</a></td>
						<td><a asp-area="Admin" asp-controller="Testimonial" asp-action="DeleteTestimonial" asp-route-id="@item.Id" data-id="@item.Id" class="btn btn-outline-danger btn-sm">Delete</a></td>
					</tr>
				</tbody>
			}

		</table>
		<!-- End Table with hoverable rows -->
		<a asp-area="Admin" asp-controller="Testimonial" asp-action="AddTestimonial" class="btn btn-outline-success btn-sm">Add Testimonial</a>

	</div>
</div>




